- if !current_user.subscribed?(@question)
  br
  = link_to 'Subscribe',
              question_subscriptions_path(@question),
              method: :post,
              remote: true
- else
  br
  = link_to 'Unsubscribe',
              subscription_path(@subscription),
              method: :delete,
              remote: true,
              data: { confirm: 'Are you sure?' }
