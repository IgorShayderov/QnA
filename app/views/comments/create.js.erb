commentableName = '<%= resource_name(@commentable) %>';
commentableId = '<%= @commentable.id %>';
$commentableErrorsBlock = $(`.comment-errors-for-${commentableName}-${commentableId}`);

$($commentableErrorsBlock).html('<%= render 'shared/errors', resource: @comment %>');

<% if @commentable.persisted? %>
  $(`#new-comment-for-${commentableName}-${commentableId} #comment_body`).val('');
<% end %>
